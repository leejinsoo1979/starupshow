# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OpenAI (for AI features)
OPENAI_API_KEY=sk-...

# Tavily (for web search - get key at https://tavily.com)
TAVILY_API_KEY=tvly-...

# DeepSeek (for Mission Control - get key at https://platform.deepseek.com)
DEEPSEEK_API_KEY=sk-...

# Groq (for fast inference - get key at https://console.groq.com)
GROQ_API_KEY=gsk_...

# Google AI (Gemini)
GOOGLE_GENERATIVE_AI_API_KEY=...

# Google OAuth (for Google Drive integration)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Qwen3-TTS (로컬 Python 서버) - 무료 오픈소스 TTS
# Gemini TTS는 완전 제거됨, Qwen3-TTS만 사용
QWEN_TTS_SERVER_URL=http://localhost:8100

# VibeVoice-ASR (음성 텍스트 변환)
# Microsoft Gradio 데모 사용 (무료)
# 나중에 HuggingFace Spaces 배포 후 URL 교체
VIBEVOICE_GRADIO_URL=https://dd66e23bd8ab778987.gradio.live

# Telegram Bot (외부 에이전트 제어)
# @BotFather에서 봇 생성 후 토큰 발급
# 웹훅 설정: https://api.telegram.org/bot<TOKEN>/setWebhook?url=https://your-domain.com/api/integrations/telegram/webhook
TELEGRAM_BOT_TOKEN=your-bot-token

# WhatsApp Business API (외부 에이전트 제어)
# Meta Business Manager에서 WhatsApp Business 계정 생성
# 웹훅 설정: https://your-domain.com/api/integrations/whatsapp/webhook
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_VERIFY_TOKEN=glowus_webhook_token
