{
  "name": "glowus",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0 <23.0.0"
  },
  "main": "electron/dist/main.js",
  "build": {
    "appId": "com.glowus.app",
    "productName": "GlowUS",
    "publish": [
      {
        "provider": "github",
        "owner": "leejinsoo1979",
        "repo": "glowus"
      }
    ],
    "afterPack": "./scripts/afterPack.js",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "server",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "icon": "build/icon.png",
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": "nsis"
    }
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "electron:compile": "tsc electron/main.ts electron/preload.ts --outDir electron/dist --target ES2022 --module commonjs --moduleResolution node --esModuleInterop --skipLibCheck",
    "electron:start": "wait-on tcp:3000 && electron .",
    "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron:compile && npm run electron:start\"",
    "electron:pack": "npm run build && cp -R public .next/standalone/public && cp -R .next/static .next/standalone/.next/static && npm run electron:compile && electron-builder"
  },
